

entity CadastroUser {
	nome String
    telefone String
    tipo String
	pais String,
	estado String
    cidade String
    bairro String
    cep Integer
    logradouro String
    numero Integer
    complemento String
}



entity Item {
	descricao String
    imagem ImageBlob
    quantidade Integer
    categoriaItem CategoriaItem
    unidadeMedida UnidadeMedida
}




entity CadastroDoacao {
	doacaoAnonima Boolean,
    realizaEntrega Boolean,
	dataDoacao Instant,
	logradouro String,
    numero Integer,
    bairro String,
    cidade String,
    cep String,
    estado String,
    pais String,
    complemento String
   
}
entity Solicitacao {
	solicitante String,
	anonima Boolean,
	dataSolicitacao Instant,
    enderecoEntrega String,
    localDeEntrega String,
    dataAprovacao LocalDate,
    aprovado Boolean,
    ativa Boolean
}
entity Acao {
	dataAcao Instant,
	usuarioCriacaoAcao String,
	pendente Boolean,
    dataExecucaoAcao LocalDate,
    ativa Boolean,
    observacoes String
   
}
enum UnidadeMedida {
	CARTELA, CENTO, CENTIMETRO,
    CAIXA, DUZIA, EMBALAGEM, 
	QUILOGRAMA, KIT, LITRO,
    METRO, METRO_CUBICO, PECA,
    TONELADA, UNIDADE, VALOR
}

enum CategoriaItem {
	ALIMENTO, ACESSIBILIDADE, ELETRODOMESTICO, FERRAMENTAS,
    HIGIENE, INFANTIL, INFORMATICA, LIMPEZA, LIVROS, MONETARIO,
    MOVEIS, PAPELARIA, SAUDE, UTILITARIO, VESTUARIO
}

	relationship OneToOne {
	CadastroUser{user} to User
    
	}

	relationship OneToOne{
    Acao to CadastroDoacao
    }
    
    relationship OneToOne{
    Acao to Solicitacao
    }
    
      relationship OneToOne{
    Acao to User
    }
    
    
    
    relationship ManyToOne{
	CadastroDoacao{user} to User
}


    
      relationship ManyToOne{
	CadastroDoacao{descricao} to Item
}

    relationship ManyToOne{
	Solicitacao{user} to User
}


    
      relationship ManyToOne{
	Solicitacao{descricao} to Item
}
